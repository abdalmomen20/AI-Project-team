N = 5  # حجم الرقعة
board = [[0 for _ in range(N)] for _ in range(N)]

# دالة للتحقق إذا كان المكان آمن
def is_safe(row, col):
    # التحقق من نفس العمود
    for i in range(row):
        if board[i][col] == 1:
            return False

    # التحقق من القطر الأساسي
    i, j = row, col
    while i >= 0 and j >= 0:
        if board[i][j] == 1:
            return False
        i -= 1
        j -= 1

    # التحقق من القطر العكسي
    i, j = row, col
    while i >= 0 and j < N:
        if board[i][j] == 1:
            return False
        i -= 1
        j += 1

    return True

# دالة DFS / Backtracking
def dfs(row):
    if row == N:
        for r in board:
            print(" ".join("Q" if x else "." for x in r))
        print("-" * 10)
        return

    for col in range(N):
        if is_safe(row, col):
            board[row][col] = 1  # ضع الملكة
            dfs(row + 1)          # روح للصف التالي
            board[row][col] = 0   # تراجع (Backtrack)

# ابدأ من الصف الأول
dfs(0)
